extends layout

block content
	div.container-fluid
		div.row
			div.col-sm-3.col-md-2.sidebar
				ul.nav.nav-sidebar
					li
						img.img-responsive.img-circle(src='data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==', width='200', height='200', alt='Generic placeholder thumbnail')
					li
						h4 #{user.fullName}
					li.text-muted
						p Status

			div.col-sm-6.col-md-8
				#user
					h1.text-left.login-title Hi #{user.fullName}. Check your details below:
						div.account-wall
							div.account-info
								a.btn.btn-default.pull-right(onclick='#', role='button') Edit Profile
								ul.user-details
									li Name: #{user.fullName}
									li Email: #{user.email}
									li Info: #{user.biography} 
									li Favourite Sports:

						#events
							h1.text-left.login-title Events Created
							ul
								each event in user.eventsCreated
									li
										a(href='/event?id='+event)= event
