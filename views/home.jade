extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.fullName}. Check your details below:
						div.signup-wall
							ul.user-details
								li Email    ---> #{user.email}
								li Phone ---> #{user.phone} 
								li Bio ---> #{user.biography}
						a(href='/signout', class='text-center new-account') Sign Out