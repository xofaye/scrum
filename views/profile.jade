extends layout

block content
	div.container-fluid
		div.row
			div.col-sm-3.col-md-2.sidebar
				ul.nav.nav-sidebar
					li
						img.img-responsive.img-circle(src='data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==', width='200', height='200', alt='Generic placeholder thumbnail')
					li
						h4 #{profile.fullName}
					li.text-muted
						p #{profile.role}

			div.col-sm-6.col-md-8
				#profile
					if user.id === profile.id
						h1.text-left.login-title Hi #{profile.fullName}. Check your details below:
					else
						#{profile.fullName}
					div.signup-wall
						div.account-info
							if user.id === profile.id
								a.btn.btn-default.pull-right(onclick='showFormInput()', role='button') Edit Profile
								form#editProfile.form-editProfile(action='/profile', method='POST')
									.form-group
										label(for='inputName')
											| Name: 
											span(style='font-weight: normal') #{user.fullName}
										input#inputName.form-control(type='text', name='fullName', placeholder='Name', style='display:none')
									.form-group
										label(for='inputEmail')
											| Email: 
											span(style='font-weight: normal')  #{user.email}
										input#inputEmail.form-control(type='text', name='email', placeholder='Email', style='display:none')
									.form-group
										label(for='inputInfo')
											| Info: 
											span(style='font-weight: normal') #{user.biography}
										textarea#inputInfo.form-control(rows='4', name='bio', placeholder='Bio', style='display:none')
										button.btn.btn-default(type='submit', style='display:none') Submit
						#events
							h1.text-left.login-title Events Created
							ul
								each event in profile.eventsCreated
									li
										a(href='/event?id='+event)= event
